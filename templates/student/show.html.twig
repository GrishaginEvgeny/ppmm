{% extends 'base.html.twig' %}

{% block title %}Студент: {{ student.fullName }}{% endblock %}

{% block body %}
    <h1>Профиль студента</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>ФИО</th>
                <td>{{ student.fullName }}</td>
            </tr>
            <tr>
                <th>Группа</th>
                <td>{{ student.studyGroup }}</td>
            </tr>
            <tr>
                <th>Институт</th>
                <td>{{ student.institute }}</td>
            </tr>
            <tr>
                <th>Академический рейтинг</th>
                <td>{{ student.rating }}</td>
            </tr>
        </tbody>
    </table>

    <h1>Мероприятия</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Уровень</th>
            <th>Баллы</th>
            <th>Статус проверки</th>
            <th>Название</th>
            <th>Направление</th>
        </tr>
        </thead>
        <tbody>
        {% for eventItem in events %}
            <tr>
                <td>{{ eventItem.event.level }}</td>
                <td>{{ eventItem.event.points }}</td>
                <td>{{ eventItem.status.value }}</td>
                <td>{{ eventItem.event.name }}</td>
                <td>{{ eventItem.event.direction.name }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Не найдено мероприятий</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="pagination content-center">
        {{ knp_pagination_render(events,  '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>

    <h1>Сводная таблица по баллам:</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Направление</th>
            <th>Сумма баллов</th>
        </tr>
        </thead>
        <tbody>
        {% for row in summary %}
            <tr>
                <td>{{ row.direction_name }}</td>
                <td>{{ row.total_points }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Данные не найдены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="px-2 mt-2 btn btn-primary" href="{{ path('app_event_index') }}">К мероприятиям</a>
{% endblock %}
